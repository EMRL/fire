{
    "name": "emrl/fire",
    "type": "wordpress-muplugin",
    "license": "MIT",
    "description": "WordPress utilities and helpers",
    "authors": [
        {
            "name": "Corey Worrell",
            "email": "cworrell@emrl.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Fire\\": "src/"
        },
        "files": [
            "src/Core/functions.php",
            "src/Path/functions.php",
            "src/Template/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Fire\\Tests\\": "tests/",
            "": "tests/stubs"
        }
    },
    "require-dev": {
        "brain/monkey": "^2",
        "phpunit/phpunit": "^8",
        "friendsofphp/php-cs-fixer": "^2",
        "squizlabs/php_codesniffer": "^3"
    },
    "scripts": {
        "test": "phpunit",
        "lint": [
            "php-cs-fixer fix --dry-run --diff .",
            "phpcs --standard=PSR12 --exclude=PSR12.Operators.OperatorSpacing --ignore=tests/stubs -s src tests"
        ]
    }
}
